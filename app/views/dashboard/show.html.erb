<% if current_user.nil? %>
  <%= render "dashboard/hero" %>
  <%= render "dashboard/call-to-action-banner" %>
<% end %>

<div class="mt-8 flex flex-col px-16 sm:px-10">
  <%= turbo_frame_tag "portfolio_turbo_frame" do %>
  <div class="flex items-baseline">
    <h3 class="text-4xl font-bold">Markets</h3>
    <p class="ml-8 text-xl font-semibold">View by: <span class="ml-2 underline decoration-amber-500 decoration-4 underline-offset-8">Trending<span></p>
  </div>
    <%= render "shared/filter-table" %>
    <%= render "shared/stocks-container", stocks: @stocks %>
  <% end %>
</div>

<% if current_user.nil? %>
  <%= render "dashboard/call_to_action_2" %>
<% end %>
