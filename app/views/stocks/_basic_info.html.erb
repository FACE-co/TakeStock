<% hash = @basic_info %>

<table class="table-fixed text-xxs w-full">
  <tbody>
    <tr>
      <td class="w-1/6"><strong>Open:</strong></td><td class="w-1/6">$<%= hash[:regularMarketOpen].round(2).to_s %></td>
      <td class="w-1/6"><strong>Change:</strong></td><td class="w-1/6">$<%= hash[:regularMarketChange].round(2).to_s %></td>
      <td class="w-1/6"><strong>Mkt Cap:</strong></td><td class="w-1/6">$<%= number_to_human(hash[:marketCap].to_s, units: {unit: "", million: "M", billion: "B", trillion: "T"}, format: "%n%u") %></td>
    </tr>
    <tr>
      <td class="w-1/6"><strong>High:</strong></td><td class="w-1/6">$<%= "#{hash[:regularMarketDayHigh].round(2).to_s.to_f.round(2)}" %></td>
      <td class="w-1/6"><strong>Change%:</strong></td><td class="w-1/6"><%= hash[:regularMarketChangePercent].round(2).to_s %></td>
      <td class="w-1/6"><strong>Exchange:</strong></td><td class="w-1/6"><%= number_to_human(hash[:fullExchangeName].to_s) %></td>
    </tr>
    <tr>
      <td class="w-1/6"><strong>Low:</strong></td><td class="w-1/6">$<%= hash[:regularMarketDayLow].round(2).to_s %></td>
      <td class="w-1/6"><strong>52wk H:</strong></td><td class="w-1/6">$<%= hash[:fiftyTwoWeekHigh].round(2).to_s %></td>
      <td class="w-1/6"><strong>EPS:</strong></td><td class="w-1/6"><%= hash[:epsTrailingTwelveMonths].round(2).to_s %></td>
    </tr>
    <tr>
      <td class="w-1/6"><strong>Close:</strong></td><td class="w-1/6">$<%= hash[:regularMarketPreviousClose].round(2).to_s %></td>
      <td class="w-1/6"><strong>52wk L:</strong></td><td class="w-1/6">$<%= hash[:fiftyTwoWeekLow].round(2).to_s %></td>
      <td class="w-1/6"><strong>PER:</strong></td><td class="w-1/6"><%= hash[:trailingPE].round(2).to_s %></td>
    </tr>
    <tr>
      <td class="w-1/6"><strong>Volume:</strong></td><td class="w-1/6">$<%= number_to_human(hash[:regularMarketVolume].to_s, units: {unit: "", million: "M", billion: "B"}, format: "%n%u") %></td>
      <td class="w-1/6"><strong>Dividend:</strong></td><td class="w-1/6">$<%= hash[:trailingAnnualDividendRate].round(2).to_s %></td>
      <td class="w-1/6"><strong>Shares/O:</strong></td><td class="w-1/6"><%= number_to_human(hash[:sharesOutstanding].to_s, units: {unit: "", million: "M", billion: "B"}, format: "%n%u") %></td>
    </tr>
  </tbody>
</table>
