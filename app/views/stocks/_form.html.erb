<%= simple_form_for stock, data: { turbo: false } do |f| %>
  <div class="xl:w-70">
    <div class="input-group relative flex flex-wrap items-stretch w-full rounded">
      <%= f.input :ticker, wrapper_html: {style: "margin-bottom: 0px"},class:"form-control relative flex-auto min-w-0 block w-50 px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded-l-full transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-indigo-600 focus:outline-none", placeholder:"Search, e.g TSLA", label: false %>
